{
    "name": "create-fm-playground",
    "version": "2.7.0",
    "description": "Create a new FM Playground project with optional formal method tools",
    "main": "dist/index.js",
    "type": "module",
    "bin": {
        "create-fm-playground": "./bin/cli.mjs"
    },
    "scripts": {
        "build": "tsc",
        "dev": "tsc --watch",
        "prepublishOnly": "npm run build",
        "test": "echo \"Error: no test specified\" && exit 1",
        "version": "echo 'Updating version...'",
        "postversion": "echo 'Version updated successfully'",
        "format": "prettier --write .",
        "lint": "prettier --check .",
        "pack-test": "npm pack --dry-run",
        "local-install": "npm pack && npm install -g create-fm-playground-*.tgz",
        "local-uninstall": "npm uninstall -g create-fm-playground && rm -f create-fm-playground-*.tgz",
        "release:patch": "npm version patch && git push origin main --tags",
        "release:minor": "npm version minor && git push origin main --tags",
        "release:major": "npm version major && git push origin main --tags"
    },
    "keywords": [
        "formal-methods",
        "playground",
        "cli",
        "npx",
        "limboole",
        "z3",
        "nuxmv",
        "alloy",
        "spectra"
    ],
    "author": "Soaibuzzaman",
    "license": "MIT",
    "dependencies": {
        "chalk": "^5.3.0",
        "fs-extra": "^11.1.1",
        "inquirer": "^9.2.0",
        "ora": "^6.3.1"
    },
    "devDependencies": {
        "@types/fs-extra": "^11.0.0",
        "@types/inquirer": "^9.0.0",
        "@types/node": "^20.0.0",
        "prettier": "^3.5.3",
        "typescript": "^5.0.0"
    },
    "engines": {
        "node": ">=16.0.0"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/se-buw/fm-playground.git",
        "directory": "create-fm-playground"
    },
    "bugs": {
        "url": "https://github.com/se-buw/fm-playground/issues"
    },
    "homepage": "https://play.formal-methods.net",
    "files": [
        "dist",
        "bin",
        "templates",
        "README.md"
    ],
    "preferGlobal": true
}
