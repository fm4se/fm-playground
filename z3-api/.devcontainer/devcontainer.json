{
	"name": "FM Playground z3-api devcontainer",
	"build": {
		"dockerfile": "../Dockerfile"
	},
	"customizations": {
		"vscode": {
			"settings": {
				"terminal.integrated.shell.linux": "/bin/bash"
			},
			"extensions": [
				"ms-python.python",
				"ms-azuretools.vscode-docker"
			]
		}
	},
	"forwardPorts": [8080],
	"postCreateCommand": "sh .devcontainer/post-create.sh",
	"remoteUser": "root"
}